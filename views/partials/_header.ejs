<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username) {%>
      <form action="/logout" class= "form-inline" method= "post">
        <span class="navbar-text" style="margin-right: 0.5rem;">Logged in as: </span>
        <span class="navbar-brand">
          <%= username %> 
        </span>
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>
      <% } %>
      <% if (username === undefined) {%>
        <form action="/login" class="form-inline" method="post">
          <div class="form-group">
            <input type="text" name="username", value="username" class="form-control" style="width: 150px; margin: 0.5em">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </form>
        <% } %>  
  </nav>
</header>